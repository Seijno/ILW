  </a>
    <small>Geschreven door: {author}</small><br>
    <small>Datum publiciteit: {pubDate}</small><br>
    <small>Beschrijving: {description}</small>
    <slot />
</BaseLayout>

<style>
  #backBtn{
    top: 5rem;
    right: 5rem;
    position: fixed;
    text-decoration: none;
    & svg{
      width: 2rem;
      height: 2rem;
    }
    
  }
        @view-transition {
      navigation: auto;

    }

</style>